# ==============================================
# Production Environment Configuration Template  
# Copy this to .env.production and fill in your actual values
# ==============================================

# Application Settings
NODE_ENV=production
PORT=3000

# Domain Configuration  
DOMAIN_NAME=your-domain.com

# Database Configuration (Strong passwords!)
DB_HOST=localhost
DB_USER=timeaccount
DB_PASSWORD=your_very_strong_database_password_here
DB_ROOT_PASSWORD=your_very_strong_root_password_here  
DB_NAME=time_account_db
DATABASE_URL=mysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:3306/${DB_NAME}

# Security Settings (Generate strong random strings!)
JWT_SECRET=your_extremely_strong_jwt_secret_minimum_32_characters_long

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your_app_specific_password

# Admin Email Addresses (Optional - for automatic notifications)
# Leave empty if you don't want automatic email notifications
# You can still create admin users via create-admin.js script
ADMIN_EMAIL_1=
ADMIN_EMAIL_2=
# Or completely remove these lines if not needed

# Optional: Application Password for Admin Features  
APP_PASSWORD=your_admin_password
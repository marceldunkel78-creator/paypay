# Railway Environment Variables Template
# Copy these to your Railway service environment variables

# Database (Railway will provide these automatically when you add MySQL)
DATABASE_URL=mysql://username:password@host:port/database
DB_HOST=
DB_USER=
DB_PASSWORD=
DB_NAME=

# Server
PORT=3000
NODE_ENV=production

# JWT
JWT_SECRET=your_super_secure_jwt_secret_here
JWT_EXPIRES_IN=24h

# Email (Optional - for approval notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
ADMIN_EMAIL_1=admin1@example.com
ADMIN_EMAIL_2=admin2@example.com

# Admin Password Protection
ADMIN_PASSWORD=your_admin_password_here
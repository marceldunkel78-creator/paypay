# ==============================================
# Time Account Management Application
# Environment Configuration Template
# ==============================================

# Application Settings
NODE_ENV=development
PORT=3000

# Database Configuration
# MySQL Connection String
# Format: mysql://username:password@host:port/database_name
DATABASE_URL=mysql://username:password@localhost:3306/time_account_db

# Security Settings
# JWT Secret for token signing (use a strong, random string in production)
JWT_SECRET=your_jwt_secret_here_use_a_strong_random_string

# Email Configuration (OPTIONAL)
# SMTP settings for sending notification emails
# Leave empty to disable email notifications
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_app_specific_password

# Administrator Settings
# Email addresses of application administrators
ADMIN_EMAIL_1=admin1@example.com
ADMIN_EMAIL_2=admin2@example.com

# Optional: Additional Configuration
# DEBUG=false
# LOG_LEVEL=info